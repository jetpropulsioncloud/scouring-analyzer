{
  "name": "scouringanalyzer",
  "version": "1.0.3",
  "productName": "The Grand Lodge",
  "description": "The Grand Lodge — RTS build companion app",
  "main": "main.js",
  "author": "Blockclub Team",
  "license": "ISC",
  "copyright": "© 2025 Blockclub Team",
  "homepage": "https://github.com/jetpropulsioncloud/scouring-analyzer",
  "repository": {
    "type": "git",
    "url": "https://github.com/jetpropulsioncloud/scouring-analyzer.git"
  },

  "scripts": {
    "start": "electron-forge start",             
    "dist": "electron-builder -w",             
    "build": "electron-builder -w",               
    "publish": "electron-builder -w -p always"    
  },

  "devDependencies": {
    "@electron-forge/cli": "^7.8.1",
    "electron": "^37.2.0",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "electron-log": "^5.4.1",
    "electron-updater": "^6.6.2",
    "firebase": "^12.0.0",
    "yaml": "^2.8.0"
  },

  "build": {
    "appId": "com.scouringanalyzer.app",
    "productName": "The Grand Lodge",
    "directories": { "output": "dist" },

    "files": [
      "index.html",
      "viewBuild.html",
      "renderer.js",
      "preload.js",
      "main.js",
      "style.css",
      "assets/**/*",
      "!**/*.txt",
      "package.json"
    ],

    "asar": true,

    "publish": [
      { "provider": "github", "owner": "jetpropulsioncloud", "repo": "scouring-analyzer" }
    ],

    "win": {
      "target": "nsis",
      "icon": "assets/scouring-icon.ico"
    },

    "nsis": {
      "oneClick": true,                           
      "perMachine": false,                        
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "The Grand Lodge"
    }
  }
}
